<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.netive.nplate.mapper.LoginMapper">

    <select id="getBordListById" parameterType="String" resultType="BoardDTO">
        <![CDATA[
        select * from NETIVE_PROJECT01_BOARD
        where BBSCTT_WRTER = #{id}
        order by BBSCTT_NO desc
        ]]>
    </select>

    <select id="countPostsById" parameterType="String" resultType="int">
        <![CDATA[
        select count(*) from NETIVE_PROJECT01_BOARD where BBSCTT_WRTER = #{id}
        ]]>
    </select>

</mapper>